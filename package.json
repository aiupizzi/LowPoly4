{
  "name": "lowpoly4",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "npm run build && electron .",
    "dist:win": "npm run build && electron-builder --win nsis portable",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "cannon-es": "^0.20.0",
    "gsap": "^3.13.0",
    "postprocessing": "^6.36.6",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "electron": "^32.2.1",
    "electron-builder": "^24.13.3",
    "vite": "^7.1.5"
  },
  "build": {
    "appId": "com.lowpoly4.game",
    "productName": "LowPoly4",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
